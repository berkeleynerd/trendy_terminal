with "trendy_terminal";

project Trendy_Terminal_Tests is

   for Languages use ("Ada");

   for Create_Missing_Dirs use "True";

   for Object_Dir  use "build/obj";
   for Exec_Dir use "build/bin";

   for Source_Dirs use ("src");

   Executables := (
      "trendy_terminal_test"
   );

   for Main use Executables;

   package Builder is
      for Executable ("test") use "trendy_terminal_test";
   end Builder;

   package Compiler renames Trendy_Terminal.Compiler;
   package Binder renames Trendy_Terminal.Binder;
   package Pretty_Printer renames Trendy_Terminal.Pretty_Printer;

end Trendy_Terminal_Tests;
